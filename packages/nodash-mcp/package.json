{
  "name": "nodash-mcp",
  "version": "1.0.0",
  "description": "Nodash MCP - Model Context Protocol integration for AI-assisted analytics (not for npm)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "nodash-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "start": "node dist/server.js",
    "test": "vitest run",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "analytics",
    "claude",
    "llm",
    "typescript"
  ],
  "author": "Nodash Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/nodash.git",
    "directory": "packages/nodash-mcp-server"
  },
  "bugs": {
    "url": "https://github.com/your-org/nodash/issues"
  },
  "homepage": "https://nodash.ai",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@nodash/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

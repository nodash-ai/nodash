{
  "name": "@nodash/mcp",
  "version": "0.1.7",
  "description": "MCP server for nodash - AI agent layer",
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "bin": {
    "nodash-mcp": "dist/server.js"
  },
  "scripts": {
    "prebuild": "node scripts/bundle-docs.js",
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "nodash",
    "mcp",
    "ai-agents",
    "model-context-protocol"
  ],
  "author": "Nodash Team",
  "license": "MIT",
  "dependencies": {
    "@nodash/sdk": "^0.1.7",
    "@nodash/cli": "^0.1.8",
    "@modelcontextprotocol/sdk": "^1.15.1"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "vitest": "^4.0.0-beta.3"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ]
}

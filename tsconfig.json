{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "references": [
    { "path": "./packages/nodash-sdk" },
    { "path": "./packages/nodash-cli" },
    { "path": "./packages/nodash-mcp" }
  ],
  "files": [],
  "exclude": ["node_modules", "**/dist", "**/node_modules"]
} 